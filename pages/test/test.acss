/**
 * Crypto Test Page Styles
 */

.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* Header */
.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.rerun-button {
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.rerun-button[disabled] {
  background-color: #ccc;
  color: #999;
}

.last-run {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* Section */
.section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

/* Environment Info */
.info-row {
  margin-bottom: 15rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-right: 10rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.api-list {
  margin-top: 10rpx;
}

.api-item {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
}

/* Summary */
.summary-section {
  background-color: #f0f9ff;
}

.summary-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 150rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-value.passed {
  color: #52c41a;
}

.summary-value.failed {
  color: #ff4d4f;
}

/* Test Item */
.test-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  border-left: 4rpx solid #e8e8e8;
}

.test-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.test-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.test-status {
  font-size: 32rpx;
  margin-left: 20rpx;
}

.test-status.passed {
  color: #52c41a;
}

.test-status.failed {
  color: #ff4d4f;
}

.test-details {
  margin-top: 15rpx;
}

.test-description {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
  font-style: italic;
}

.test-result-row {
  display: flex;
  margin-bottom: 10rpx;
  align-items: flex-start;
}

.test-label {
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  min-width: 150rpx;
  margin-right: 10rpx;
}

.test-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* Error Display */
.test-error {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff2f0;
  border-radius: 8rpx;
  border-left: 4rpx solid #ff4d4f;
}

.error-label {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.error-message {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.error-type {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.error-stack {
  font-size: 22rpx;
  color: #999;
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: monospace;
  margin-top: 10rpx;
}

/* Process Steps Display */
.process-steps {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.process-label {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.process-content {
  font-size: 24rpx;
  color: #333;
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: monospace;
  line-height: 1.6;
  background-color: #fff;
  padding: 15rpx;
  border-radius: 6rpx;
  border: 1rpx solid #e8e8e8;
}

